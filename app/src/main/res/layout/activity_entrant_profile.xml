<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="@android:color/white"
        app:title="Profile"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="John Doe"
                android:padding="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="jdoe@gmail.com"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Phone Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number (optional)"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="XXX-XXX-XXXX"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Notification Checkbox -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Preferences"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="20dp" />

            <CheckBox
                android:id="@+id/notificationsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingTop="8dp"
                android:text="I want to receive notifications from administrators and organizers"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:backgroundTint="@color/primary_pink"
                android:textColor="@color/white"
                android:layout_gravity="start"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:radius="20dp" />

            <Button
                android:id="@+id/historyButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_green"
                android:radius="30dp"
                android:strokeWidth="2"
                android:text="Registration History"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_pink"
                android:radius="30dp"
                android:text="Delete Profile"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
