<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/waitingList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="Waiting List: # of people on waiting list"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/availableSpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Spots Available: # of available spots"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/numSelectedEntrants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter # of participants you wish to select"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:layout_marginEnd="8dp"
            tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
            android:id="@+id/runDrawButton"
            android:text="Run Draw"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText"/>
    </LinearLayout>

</LinearLayout>