<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CreateEventFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ==== EVENT INFORMATION SECTION ==== -->
        <TextView
            android:id="@+id/header_event_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_information"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 1. Event Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_name"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/event_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_event_info">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2. Event Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_description"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_name">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 3. Event Location -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_location"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_description">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 4. Event Start Date & Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_start_date"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/event_start_date"
            app:endIconDrawable="@drawable/ic_calendar_month_24"
            app:endIconMode="custom"
            app:layout_constraintEnd_toStartOf="@id/text_input_layout_event_start_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_location">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_start_time"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="@string/event_start_time"
            app:endIconDrawable="@drawable/baseline_access_time_24"
            app:endIconMode="custom"
            app:layout_constraintBottom_toBottomOf="@id/text_input_layout_event_start_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_input_layout_event_start_date"
            app:layout_constraintTop_toTopOf="@id/text_input_layout_event_start_date">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 5. Event End Date & Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_end_date"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/event_end_date"
            app:endIconDrawable="@drawable/ic_calendar_month_24"
            app:endIconMode="custom"
            app:layout_constraintEnd_toStartOf="@id/text_input_layout_event_end_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_start_date">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_end_time"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="@string/event_end_time"
            app:endIconDrawable="@drawable/baseline_access_time_24"
            app:endIconMode="custom"
            app:layout_constraintBottom_toBottomOf="@id/text_input_layout_event_end_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_input_layout_event_end_date"
            app:layout_constraintTop_toTopOf="@id/text_input_layout_event_end_date">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 6. Event Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_event_price"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_end_date">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_event_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Max Attendees -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_max_attendees"
            style="@style/Widget.App.TextInputLayout.OutlinedBox.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/max_attendees"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_event_price">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_max_attendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- ==== WAITING LIST INFORMATION SECTION ==== -->
        <TextView
            android:id="@+id/header_waiting_list_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/waiting_list_information"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_max_attendees" />

        <!-- Geolocation Requirement -->
        <TextView
            android:id="@+id/label_geolocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/require_geolocation_for_check_in"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/switch_geolocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_waiting_list_info" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/label_geolocation"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- ==== SAVE BUTTON ==== -->
        <Button
            android:id="@+id/button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="@string/save_event"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_pink"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_geolocation"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
