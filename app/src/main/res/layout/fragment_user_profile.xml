<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="John Doe"
                android:padding="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="jdoe@gmail.com"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Phone Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number (optional)"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/phone_field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_field_background"
                android:hint="XXX-XXX-XXXX"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <!-- Notification Checkbox -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Preferences"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                android:paddingTop="20dp" />

            <CheckBox
                android:id="@+id/notifications_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingTop="8dp"
                android:text="I want to receive notifications from administrators and organizers"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Update"
                android:backgroundTint="@color/primary_pink"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:radius="30dp" />

            <Button
                android:id="@+id/historyButton"
                android:layout_width="270dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/primary_green"
                android:radius="30dp"
                android:strokeWidth="2"
                android:text="Registration History"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="207dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/primary_pink"
                android:radius="30dp"
                android:textSize="18sp"
                android:text="Delete Profile"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>