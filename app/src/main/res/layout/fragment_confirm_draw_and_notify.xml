<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Prominent Success Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:backgroundTint="@color/primary_green"
            android:background="@drawable/success_banner_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_check_circle_24"
                android:layout_marginEnd="8dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/draw_successful_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draw_successful"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Waiting List + Available Spots Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <!-- Waiting List -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/waiting_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_list_label"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/waiting_list_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Available Spots -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/available_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spots_available_label"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/available_space_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Selected Users -->
        <TextView
            android:id="@+id/selected_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/users_selected_label"
            android:textColor="@color/primary_green"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/selected_users_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:paddingBottom="40dp"
            android:textAlignment="viewStart" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/bottom_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Informational Message -->
        <TextView
            android:id="@+id/text_info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Informational message here." />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/button_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/confirm_and_notify_button"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="@string/confirm_and_notify_button"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/primary_pink"
                android:radius="30dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="207dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="@string/cancel_button"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/primary_green"
                android:radius="30dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
