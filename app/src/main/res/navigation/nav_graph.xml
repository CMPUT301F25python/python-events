<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lotteryevent.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_organizerEventPageFragment"
            app:destination="@id/organizerEventPageFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerEventPageFragment"
        android:name="com.example.lotteryevent.organizer.OrganizerEventPageFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_organizer_event_page">
        <action
            android:id="@+id/action_organizerEventPageFragment_to_runDrawFragment"
            app:destination="@id/runDrawFragment"/>
        <action
            android:id="@+id/action_organizerEventPageFragment_to_entrantListFragment"
            app:destination="@id/entrantListFragment" />


        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/runDrawFragment"
        android:name="com.example.lotteryevent.organizer.RunDrawFragment"
        android:label="Run Draw"
        tools:layout="@layout/fragment_run_draw">
        <action
            android:id="@+id/action_runDrawFragment_to_confirmDrawAndNotifyFragment"
            app:destination="@id/confirmDrawAndNotifyFragment"/>
    </fragment>

    <fragment
        android:id="@+id/confirmDrawAndNotifyFragment"
        android:name="com.example.lotteryevent.organizer.ConfirmDrawAndNotifyFragment"
        android:label="Confirm Draw and Notify"
        tools:layout="@layout/fragment_confirm_draw_and_notify"
        >
        <action
            android:id="@+id/action_confirmDrawAndNotifyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.lotteryevent.CreateEventFragment"
        android:label="@string/create_new_event"
        tools:layout="@layout/fragment_create_event" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.lotteryevent.UserProfileFragment"
        android:label="@string/user_profile_page"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/availableEventsFragment"
        android:name="com.example.lotteryevent.AvailableEventsFragment"
        android:label="Events"
        tools:layout="@layout/fragment_available_events">

    </fragment>

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.lotteryevent.EventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/qrScannerFragment"
        android:name="com.example.lotteryevent.QrScannerFragment"
        android:label="Scan QR Code"
        tools:layout="@layout/fragment_qr_scanner">
        <action
            android:id="@+id/action_qrScannerFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/entrantListFragment"
        android:name="com.example.lotteryevent.organizer.EntrantListFragment"
        android:label="Entrants"
        tools:layout="@layout/fragment_entrant_list" >

        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

</navigation>
