<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lotteryevent.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_organizerEventPageFragment"
            app:destination="@id/organizerEventPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerEventPageFragment"
        android:name="com.example.lotteryevent.OrganizerEventPageFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_organizer_event_page">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>


</navigation>
